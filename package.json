{
	"name": "react-promiser",
	"version": "0.0.0",
	"description": "A react component to help manage promises",
	"keywords": [
		"react",
		"promise",
		"bycedric"
	],
	"author": "Cedric van Putten <me@bycedric.com>",
	"license": "MIT",
	"homepage": "https://github.com/bycedric/react-promiser#readme",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/bycedric/react-promiser.git"
	},
	"bugs": {
		"url": "https://github.com/bycedric/react-promiser/issues"
	},
	"main": "./build/index.js",
	"types": "./build/index.d.ts",
	"scripts": {
		"test": "jest --coverage",
		"build": "tsc"
	},
	"peerDependencies": {
		"react": "^16.0.0"
	},
	"dependencies": {},
	"devDependencies": {
		"@types/enzyme": "^3.1.10",
		"@types/jest": "^22.2.3",
		"@types/react": "^16.3.14",
		"codecov": "^3.0.2",
		"enzyme": "^3.3.0",
		"enzyme-adapter-react-16": "^1.1.1",
		"jest": "^22.4.3",
		"react": "^16.3.2",
		"react-dom": "^16.3.2",
		"ts-jest": "^22.4.6",
		"typescript": "^2.8.3"
	},
	"jest": {
		"collectCoverageFrom": [
			"src/**/*.{ts,tsx}"
		],
		"moduleFileExtensions": [
			"ts",
			"tsx",
			"js",
			"json"
		],
		"setupTestFrameworkScriptFile": "<rootDir>test/setup.ts",
		"testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
		"transform": {
			"^.+\\.tsx?$": "ts-jest"
		}
	}
}
